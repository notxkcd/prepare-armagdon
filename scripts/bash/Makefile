# Bash Script Shortcuts
# Manual for the Bash version of the Armagdon Prep tools.

all: help

help:
	@echo "Bash Script Manual"
	@echo "------------------"
	@echo "make show  - Run the bash status dashboard"
	@echo "make pomo  - Run the bash focus loop"

# Run the status dashboard
show:
	./show_tasks.sh

# Run the focus loop (Pomodoro)
pomo:
	./pomo.sh
